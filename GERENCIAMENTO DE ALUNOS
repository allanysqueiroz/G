  console.log("1 - Listar");
  console.log("2 - Buscar por nome");
  console.log("3 - Adicionar");
  console.log("4 - Cálculos");
  console.log("5 - Relatórios");
  console.log("0 - Sair");

  opcao = readline.questionInt("Escolha: ");

  switch (opcao) {
    case 1:
        estudantes.listarEstudantes();
      break;
    case 2:
        nome = readline.question("Digite o nome: ");
        estudantes.buscarEstudantePorNome(nome);

      break;
    case 3:
        nome = readline.question("digite o nome: ");
        idade = readline.questionInt("digite a idade: ");
        nota = readline.question("digite a notas: ");
        notas = nota.split(" ").map(parseFloat);
        estudante = { nome: nome, idade: idade, notas: notas };
        estudantes.adicionarEstudante(estudante);

      break;
    case 4:
        console.log("\n=== Cálculos ===");
        console.log("1 - Média Individual");
