      break;
  }
} while (opcao !== 0);

Estudantes.js
let estudantes = require("./data");

function listarEstudantes() {
    estudantes.forEach(estudante => console.log(estudante.nome));
}

function buscarEstudantePorNome(nome) {
  const estudante = estudantes.find(estudante => estudante.nome.toLowerCase().includes(nome.toLowerCase()));
  console.log(estudante);
}

function adicionarEstudante(estudante) {
  estudantes.push(estudante)
}

function media(notas) {
  let soma = 0;
  for (i = 0; i < notas.length; i++) {
    let nota = notas[i];
    soma = soma+nota;
  }
  return soma/notas.length;
}

function mediaIndividual() {
  estudantes.forEach(estudante => {
    const m = media(estudante.notas);
    console.log(`${estudante.nome}: Média = ${m}`);
  });
}

function mediaGeral() {
  let todasNotas = [];
  estudantes.forEach(estudante => {
    todasNotas = todasNotas.concat(estudante.notas);
  });
  const mGeral = media(todasNotas);
  console.log(`Média geral da turma: ${mGeral}`);
  return mGeral;
}

function maiorMedia() {
  let maior = -Infinity;
  let nomeMaior = "";
  estudantes.forEach(estudante => {
    const m = media(estudante.notas);
    if (m > maior) {
      maior = m;
      nomeMaior = estudante.nome;
    }
  });
  console.log(`Maior média: ${maior} (${nomeMaior})`);
  return { nome: nomeMaior, media: maior };
}

function aprovados() {
  const lista = estudantes.filter(estudante => media(estudante.notas) >= 7);
  console.log("Aprovados:");
  lista.forEach(e => console.log(e.nome));
  return lista;
}

function recuperacao() {
  const lista = estudantes.filter(estudante => {
    const m = media(estudante.notas);
    return m >= 5 && m < 7;
  });
  console.log("Recuperação:");
  lista.forEach(e => console.log(e.nome));
  return lista;
}

function reprovados() {
  const lista = estudantes.filter(estudante => media(estudante.notas) < 5);
  console.log("Reprovados:");
  lista.forEach(e => console.log(e.nome));
  return lista;
}

// Função para atualizar notas de um estudante
function atualizarEstudante(nome, novasNotas) {
  const estudante = estudantes.find(e => e.nome.toLowerCase() === nome.toLowerCase());
  if (estudante) {
    estudante.notas = novasNotas;
    console.log(`Notas de ${estudante.nome} atualizadas para: ${novasNotas}`);
  } else {
    console.log("Estudante não encontrado.");
  }
}

module.exports = {
  listarEstudantes,
  buscarEstudantePorNome,
  adicionarEstudante,
  atualizarEstudante,
  mediaIndividual,
  mediaGeral,
  maiorMedia,
  aprovados,
  recuperacao,
  reprovados,
};''

